#:import dp kivy.metrics.dp

<CircleIcon@Widget>:
    color: 1, 1, 1, 1
    text: ""
    text_color: 0, 0, 0
    opacity_val: 1.0
    size_hint: None, None
    size: dp(80), dp(80)

    canvas.before:
        Color:
            rgba: self.color[0], self.color[1], self.color[2], self.opacity_val
        Ellipse:
            pos: self.pos
            size: self.size

    Label:
        text: root.text
        color: root.text_color[0], root.text_color[1], root.text_color[2], root.opacity_val
        size_hint: None, None
        size: root.size
        pos: root.pos
        halign: 'center'
        valign: 'middle'
        text_size: self.size

<ProgressCircle@Widget>:
    size_hint: None, None
    size: dp(60), dp(60)
    current: 0
    total: 0

    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Line:
            circle: (self.center_x, self.center_y, min(self.size) / 2)
            width: 2

        Color:
            rgba: 0.2, 0.6, 1, 1 if self.total > 0 else 0
        Line:
            circle: (self.center_x, self.center_y, min(self.size) / 2, 0, 360 * (self.current / self.total if self.total > 0 else 0))
            width: 3

<DownloaderApp>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(12)

        Label:
            text: 'YouTube Downloader'
            font_size: dp(28)
            size_hint_y: None
            height: dp(50)
            color: 0.2, 0.2, 0.2, 1

        BoxLayout:
            size_hint_y: None
            height: dp(120)
            spacing: dp(30)

            Widget:

            CircleIcon:
                id: youtube_icon
                color: 1, 0, 0, 1
                text: '‚ñ∂'
                text_color: 1, 1, 1
                opacity_val: 1.0

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(120)

                CircleIcon:
                    color: 1, 0, 0, 1
                    text: '‚ñ∂'
                    text_color: 1, 1, 1
                    opacity_val: 1.0

                Label:
                    text: 'YouTube'
                    size_hint_y: None
                    height: dp(30)
                    color: 0.2, 0.2, 0.2, 1

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(120)

                CircleIcon:
                    color: 0.26, 0.4, 0.7, 1
                    text: 'f'
                    text_color: 1, 1, 1
                    opacity_val: 0.3

                Label:
                    text: 'Facebook'
                    size_hint_y: None
                    height: dp(30)
                    color: 0.2, 0.2, 0.2, 0.3

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(120)

                CircleIcon:
                    color: 0.9, 0.4, 0.7, 1
                    text: 'üì∑'
                    text_color: 1, 1, 1
                    opacity_val: 0.3

                Label:
                    text: 'Instagram'
                    size_hint_y: None
                    height: dp(30)
                    color: 0.2, 0.2, 0.2, 0.3

            Widget:

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(80)
            spacing: dp(5)

            Label:
                text: 'üìù Put the links/URL in the input address below.'
                size_hint_y: None
                height: dp(30)
                color: 0.6, 0.4, 0.0, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.width, None

            Label:
                text: 'üìù Only YouTube is available as of now.'
                size_hint_y: None
                height: dp(30)
                color: 0.6, 0.4, 0.0, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.width, None

        Label:
            text: 'Enter YouTube Video or Playlist Link'
            size_hint_y: None
            height: dp(30)
            color: 0.2, 0.2, 0.2, 1
            halign: 'left'
            valign: 'middle'
            text_size: self.width, None

        TextInput:
            id: url_input
            text: 'https://www.youtube.com/watch?v=example or https://www.youtube.com/playlist?list=exa'
            multiline: False
            size_hint_y: None
            height: dp(40)
            foreground_color: 0.5, 0.5, 0.5, 1

        Label:
            text: 'Supports single video or playlist links.'
            size_hint_y: None
            height: dp(25)
            color: 0.4, 0.4, 0.4, 1
            font_size: dp(12)
            halign: 'left'
            valign: 'middle'
            text_size: self.width, None

        Label:
            text: 'Save Location'
            size_hint_y: None
            height: dp(30)
            color: 0.2, 0.2, 0.2, 1
            halign: 'left'
            valign: 'middle'
            text_size: self.width, None

        BoxLayout:
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)

            TextInput:
                id: location_input
                multiline: False
                size_hint_x: 0.85
                text: app.default_path if hasattr(app, 'default_path') else ''

            Button:
                text: 'üìÅ Open'
                size_hint_x: 0.15
                background_color: 0.8, 0.3, 0.3, 1
                on_press: app.open_folder_dialog()

        Label:
            text: "Default save location is your system's Downloads folder."
            size_hint_y: None
            height: dp(25)
            color: 0.4, 0.4, 0.4, 1
            font_size: dp(12)
            halign: 'left'
            valign: 'middle'
            text_size: self.width, None

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(150)
            spacing: dp(10)

            BoxLayout:
                size_hint_y: None
                height: dp(80)
                spacing: dp(20)

                Widget:

                ProgressCircle:
                    id: progress_circle

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(80)

                    Label:
                        id: progress_count
                        text: ''
                        font_size: dp(18)
                        size_hint_y: None
                        height: dp(40)
                        color: 0.2, 0.2, 0.2, 1

                    Label:
                        id: progress_status
                        text: ''
                        font_size: dp(14)
                        size_hint_y: None
                        height: dp(40)
                        color: 0.4, 0.4, 0.4, 1

                Widget:

            ProgressBar:
                id: progress_bar
                max: 100
                value: 0
                size_hint_y: None
                height: dp(20)

            Label:
                id: progress_percentage
                text: ''
                size_hint_y: None
                height: dp(30)
                color: 0.2, 0.2, 0.2, 1

        Button:
            id: download_button
            text: 'Download'
            size_hint_y: None
            height: dp(50)
            background_color: 0.2, 0.6, 1, 1
            font_size: dp(18)
            on_press: app.start_download()
